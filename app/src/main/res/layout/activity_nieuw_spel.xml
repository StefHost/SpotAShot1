<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textview_boven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_groen"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:transitionName="newGame"
        android:text="@string/nieuw_spel_1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_3"
                android:contentDescription="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nieuw_spel_2" />

            <TextView
                android:id="@+id/textView_2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/streep"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:clickable="true"
                android:hint="@string/nieuw_spel_3"
                android:onClick="kleur" />

            <ImageView
                android:id="@+id/imageView_4"
                android:contentDescription="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="1dp"
                android:layout_marginLeft="-25dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/pijltje_omlaag"
                android:clickable="true"
                android:onClick="kleur" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_5"
                android:contentDescription="@+id/imageView5"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nieuw_spel_3" />

            <TextView
                android:id="@+id/textView_3"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/streep"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:clickable="true"
                android:hint="@string/nieuw_spel_4"
                android:onClick="thema" />

            <ImageView
                android:id="@+id/imageView_6"
                android:contentDescription="@+id/imageView6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="1dp"
                android:layout_marginLeft="-25dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/pijltje_omlaag"
                android:clickable="true"
                android:onClick="thema" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="bottom">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:padding="10dp"
                android:background="@drawable/border_grijs"
                style="@android:style/Widget.ProgressBar" />

            <ImageView
                android:id="@+id/imageView7"
                android:contentDescription="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginStart="-60dp"
                android:padding="2dp"
                android:background="@drawable/border_grijs"
                android:onClick="profiel_laden"
                android:src="@drawable/zwart"/>

            <LinearLayout
                android:id="@+id/linearLayout5_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:padding="10dp"
                    android:background="@drawable/streep"
                    android:textSize="16sp"
                    android:drawablePadding="10dp"
                    android:hint="@string/nieuw_spel_6"
                    android:clickable="true"
                    android:onClick="vriend" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:contentDescription="@+id/imageView8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="-65dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="5dp"
                    android:padding="1dp"
                    android:src="@drawable/pijltje_omlaag"
                    android:clickable="true"
                    android:onClick="vriend" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:inputType="textNoSuggestions"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/cursor_groen"
                android:background="@drawable/streep"
                android:maxLength="256"
                android:hint="@string/nieuw_spel_7" />

            <ImageView
                android:id="@+id/imageView9"
                android:contentDescription="@+id/imageView9"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="-65dp"
                android:layout_marginStart="-65dp"
                android:layout_marginTop="10dp"
                android:padding="1dp"
                android:src="@drawable/zoeken"
                android:clickable="true"
                android:onClick="zoeken" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:gravity="left"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:text="@string/nieuw_spel_8"
                android:background="@drawable/streep"
                android:onClick="random_speler" />

        <ImageView
            android:id="@+id/imageView10"
            android:contentDescription="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-65dp"
            android:layout_marginStart="-65dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/stefhost" />

    </LinearLayout>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="@string/nieuw_spel_10"
            android:onClick="zelfde_land"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_onder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_grijs"
        android:textSize="16sp"
        android:text="@string/nieuw_spel_9"
        android:clickable="true"
        android:onClick="start" />

    <include layout="@layout/themas"/>

    <include layout="@layout/profiel"/>

</RelativeLayout>
