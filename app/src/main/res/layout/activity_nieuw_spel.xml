<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textview_boven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="#197b30"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:transitionName="newGame"
        android:text="new game" />

    <ImageView
        android:id="@+id/imageview_boven"
        android:contentDescription="@+id/imageview_boven"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textview_boven"
        android:background="#9c9c9c" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:contentDescription="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nieuw_spel_1" />

            <LinearLayout
                android:id="@+id/linearLayout1_1"
                android:orientation="horizontal"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grijs">

                <ImageView
                    android:id="@+id/imageViewPunten1"
                    android:contentDescription="@+id/imageViewPunten1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_0" />

                <ImageView
                    android:id="@+id/imageViewPunten2"
                    android:contentDescription="@+id/imageViewPunten2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_uit"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageViewPunten3"
                    android:contentDescription="@+id/imageViewPunten3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_uit"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageViewPunten4"
                    android:contentDescription="@+id/imageViewPunten4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_uit"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageViewPunten5"
                    android:contentDescription="@+id/imageViewPunten5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_uit"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageViewPunten6"
                    android:contentDescription="@+id/imageViewPunten6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_uit"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imageViewPunten7"
                    android:contentDescription="@+id/imageViewPunten7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/kleur_uit"
                    android:visibility="gone"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:contentDescription="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/border_grijs"
                android:src="@drawable/pijltje_omlaag"
                android:clickable="true"
                android:onClick="punten" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:contentDescription="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nieuw_spel_2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/border_grijs"
                android:textSize="20sp"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/imageView4"
                android:contentDescription="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/border_grijs"
                android:src="@drawable/pijltje_omlaag"
                android:clickable="true"
                android:onClick="kleur" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:contentDescription="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nieuw_spel_3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/border_grijs"
                android:textSize="20sp"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/imageView6"
                android:contentDescription="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/border_grijs"
                android:src="@drawable/pijltje_omlaag"
                android:clickable="true"
                android:onClick="speltype" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:padding="10dp"
                android:background="@drawable/border_grijs"
                style="@android:style/Widget.ProgressBar" />

            <ImageView
                android:id="@+id/imageView7"
                android:contentDescription="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginStart="-60dp"
                android:padding="1dp"
                android:background="@drawable/border_grijs"
                android:src="@drawable/zwart"/>

            <LinearLayout
                android:id="@+id/linearLayout4_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:padding="10dp"
                    android:background="@drawable/border_grijs"
                    android:textSize="20sp"
                    android:hint="opponent" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:contentDescription="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-55dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:padding="1dp"
                    android:background="@drawable/border_grijs"
                    android:src="@drawable/pijltje_omlaag"
                    android:clickable="true"
                    android:onClick="vriend" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="search player" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:inputType="textNoSuggestions"
                android:textCursorDrawable="@drawable/cursor_groen"
                android:background="@drawable/border_grijs"
                android:maxLength="20"
                android:hint="username or email" />

            <ImageView
                android:id="@+id/imageView9"
                android:contentDescription="@+id/imageView9"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-55dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:padding="1dp"
                android:background="@drawable/border_grijs"
                android:src="@drawable/zoeken"
                android:clickable="true"
                android:onClick="zoeken" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageview_onder"
        android:contentDescription="@+id/imageview_onder"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/textview_onder"
        android:background="#9c9c9c" />

    <TextView
        android:id="@+id/textview_onder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="#464646"
        android:textSize="20sp"
        android:textColor="#9c9c9c"
        android:text="send invitation"
        android:clickable="true"
        android:onClick="start" />

</RelativeLayout>
