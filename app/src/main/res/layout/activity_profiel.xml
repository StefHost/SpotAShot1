<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textview_boven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_paars"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:transitionName="myProfile_1"
        android:text="@string/profiel_1" />

<LinearLayout
    android:id="@+id/linearLayout1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/imageView2"
            android:contentDescription="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:padding="1dp"
            android:background="@drawable/border_grijs"
            android:transitionName="myProfile_2"
            android:src="@drawable/profiel_plus"
            android:clickable="true"
            android:onClick="plaatje" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/pen"
            android:inputType="textNoSuggestions"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/cursor_paars"
            android:background="@drawable/streep"
            android:maxLength="20" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_3" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@drawable/pen"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/cursor_paars"
        android:fontFamily="sans-serif"
        android:background="@drawable/streep"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_4" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@drawable/pen"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/cursor_paars"
        android:fontFamily="sans-serif"
        android:background="@drawable/streep"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:drawableRight="@drawable/pen"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/cursor_paars"
        android:fontFamily="sans-serif"
        android:background="@drawable/streep" />

</LinearLayout>

    <TextView
        android:id="@+id/textview_onder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_grijs"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_6"
        android:clickable="true"
        android:onClick="opslaan" />

    <!--<ImageView
        android:id="@+id/imageView4"
        android:contentDescription="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:src="@drawable/pijl_rechts"
        android:onClick="opslaan"/>-->

</RelativeLayout>
