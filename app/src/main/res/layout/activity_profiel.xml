<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textview_boven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="#92278f"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:transitionName="myProfile"
        android:text="@string/profiel_1" />

    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textview_boven"
        android:background="#9c9c9c" />

<LinearLayout
    android:id="@+id/linearLayout1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:contentDescription="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:padding="1dp"
            android:background="@drawable/border_grijs"
            android:src="@drawable/plusje_klein"
            android:clickable="true"
            android:onClick="plaatje" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:inputType="textNoSuggestions"
            android:textCursorDrawable="@drawable/cursor_paars"
            android:background="@drawable/border_grijs"
            android:maxLength="20"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_3" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/cursor_paars"
        android:fontFamily="sans-serif"
        android:background="@drawable/border_grijs"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_4" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor_paars"
        android:fontFamily="sans-serif"
        android:background="@drawable/border_grijs"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor_paars"
        android:fontFamily="sans-serif"
        android:background="@drawable/border_grijs"
        android:hint="@string/profiel_5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:textColor="#92278f"
        android:text="@string/profiel_6"
        android:clickable="true"
        android:onClick="uitloggen" />

</LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:contentDescription="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/textview_onder"
        android:background="#9c9c9c" />

    <TextView
        android:id="@+id/textview_onder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="#464646"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="@string/profiel_7"
        android:clickable="true"
        android:onClick="opslaan" />

    <!--<ImageView
        android:id="@+id/imageView4"
        android:contentDescription="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:src="@drawable/pijl_rechts"
        android:onClick="opslaan"/>-->

</RelativeLayout>
