<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_grijs"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/registreren_1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingTop="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/pen"
                android:inputType="textNoSuggestions"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/cursor_oranje"
                android:background="@drawable/streep"
                android:maxLength="20"
                android:hint="@string/registreren_2" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingTop="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/pen"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/cursor_oranje"
                android:fontFamily="sans-serif"
                android:background="@drawable/streep"
                android:hint="@string/registreren_3" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/pen"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/cursor_oranje"
                android:fontFamily="sans-serif"
                android:background="@drawable/streep"
                android:hint="@string/registreren_4" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:paddingTop="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/pen"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/cursor_oranje"
                android:fontFamily="sans-serif"
                android:background="@drawable/streep"
                android:hint="@string/registreren_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/checkBox" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="@string/registreren_6" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="16sp"
            android:textColor="#f26522"
            android:text="@string/registreren_7"
            android:onClick="voorwaarden" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_grijs"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/registreren_8"
        android:clickable="true"
        android:onClick="registreren" />

</RelativeLayout>
