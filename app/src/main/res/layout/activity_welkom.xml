<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/achtergrond">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/textView2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:contentDescription="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="60dp"
            android:src="@drawable/logo_tekst_nieuw" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:contentDescription="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/textView2"
        android:background="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_grijs"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/welkom_1"
        android:clickable="true"
        android:onClick="registreren" />

    <ImageView
        android:id="@+id/imageView3"
        android:contentDescription="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/textView3"
        android:background="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@drawable/effect_grijs"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/welkom_2"
        android:clickable="true"
        android:onClick="inloggen" />

</RelativeLayout>
